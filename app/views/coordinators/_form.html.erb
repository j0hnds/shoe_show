<%= form_for @coordinator, :html => { :class => 'form-horizontal' }  do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Coordinator</legend>

    <div class="control-group">
      <%= f.label :first_name, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :first_name, :class => 'text-field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :last_name, :class => 'control-label' %>
      <div class="controls">
	<%= f.text_field :last_name, :class => 'text-field' %>
      </div>
    </div>

    <%= fields_for @contact_info do |contact_form| %>
    <div class="control-group">
      <%= contact_form.label :email, :class => 'control-label' %>
      <div class="controls">
	<%= contact_form.text_field :email, :class => 'text-field' %>
      </div>
    </div>
    <% end %>

    <%= fields_for @phone do | phone_form | %>
    <div class="control-group">
      <%= phone_form.label :phone_number, :class => 'control-label' %>
      <div class="controls">
	<%= phone_form.text_field :phone_number, :class => 'text-field' %>
      </div>
    </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', coordinators_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
